{% block menu %}

    {% if is_granted(['ROLE_APP_USER_LIST', 'ROLE_APP_GROUP_LIST']) %}
        <li class="treeview">
        {% if is_granted('ROLE_APP_USER_LIST') %}
            <li><a href="{{ path('app_settings_users_list') }}"><i class="fa fa-user"></i>Пользователи</a></li>
        {% endif %}

        {% if is_granted('ROLE_APP_GROUP_LIST') %}
            <li><a href="{{ path('app_settings_groups_list') }}"><i class="fa fa-group"></i>Группы</a></li>
        {% endif %}
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_OFFER_LIST']) %}
        <li>
            <a href="{{ path('app_offer_list') }}"><i class="fa fa-files-o"></i>Офферы</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_EVENT_TYPE_LIST']) %}
        <li>
            <a href="{{ path('app_event_type_list') }}"><i class="fa fa-laptop"></i>Типы событий</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_STAT_LIST']) %}
        <li>
            <a href="{{ path('app_stat_list') }}"><i class="fa fa-pie-chart"></i>Статистика</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_REPORT_LIST']) %}
        <li>
            <a href="{{ path('app_report_list') }}"><i class="fa fa-tasks"></i>Отчеты</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_COMMISSION_LIST']) %}
        <li>
            <a href="{{ path('app_commission_list') }}"><i class="fa fa-money"></i>Комиссии</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_APP_NOTIFICATION_LIST']) %}
        <li>
            <a href="{{ path('app_notification_list') }}"><i class="fa fa-bell-o"></i>Уведомления</a>
        </li>
    {% endif %}

    {% if is_granted(['ROLE_IMPORT_CSV_LIST']) %}
        <li>
            <a href="{{ path('app_import_csv_list') }}"><i class="fa fa-bell-o"></i>Импорт из CSV</a>
        </li>
    {% endif %}

{% endblock %}