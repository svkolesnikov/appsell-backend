{% extends 'base.html.twig' %}

{% block top_nav_menu_buttons %}
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a class="" href="{{ path('app_offer_create') }}">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                Добавить
            </a>
        </li>
    </ul>
{% endblock %}

{% block page_content %}

    <form action="#" method="GET">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr class="headings">
                        <th class="column-title">Идентификатор</th>
                        <th class="column-title">Наименование</th>
                        <th class="column-title">Владелец</th>
                        <th class="column-title">Дата начала</th>
                        <th class="column-title">Дата завершения</th>
                        <th class="column-title">Действия</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for offer in offers %}
                    <tr class="even pointer">
                        <td>{{ offer.id }}</td>
                        <td>{{ offer.title }}</td>
                        <td>{{ offer.owner.email }}</td>
                        <td>{{ offer.activeFrom|date('d-m-Y') }}</td>
                        <td>{{ offer.activeTo|date('d-m-Y') }}</td>
                        <td>
                            <div class="btn-offer">
                                {% if is_granted('ROLE_APP_OFFER_EDIT') %}
                                <a href="{{ path('app_offer_edit', { id: offer.id}) }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-pencil"></i>
                                    Редактировать
                                </a>
                                {% endif %}
                                {% if is_granted('ROLE_APP_OFFER_DELETE') %}
                                    <button
                                            type="button"
                                            class="btn btn-sm btn-default"
                                            data-toggle="modal"
                                            data-target="#modal-remove-record"
                                            data-url="{{ path('app_offer_remove', { id: offer.id}) }}"
                                    >
                                        <i class="fa fa-trash-o"></i>
                                        Удалить
                                    </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                {% include 'pager/default_pager.html.twig' %}
            </div>
        </div>
    </form>

{% endblock %}