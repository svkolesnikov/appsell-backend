{% extends 'base.html.twig' %}

{% block top_nav_menu_buttons %}
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            {% if is_granted('ROLE_APP_OFFER_CREATE') %}
                <a class="" href="{{ path('app_offer_create') }}">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Добавить
                </a>
            {% endif %}
        </li>
    </ul>
{% endblock %}

{% block page_content %}

    <form action="#" method="GET">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr class="headings">
                        {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                            <th class="column-title">Идентификатор</th>
                            <th class="column-title">Владелец</th>
                        {% endif %}
                        <th class="column-title">Наименование</th>
                        {#<th class="column-title">Тип</th>#}
                        {#<th class="column-title">Компенсации</th>#}
                        <th class="column-title">Дата начала</th>
                        <th class="column-title">Дата завершения</th>
                        <th class="column-title">Активность</th>
                        {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                            <th class="column-title">Удален</th>
                        {% endif %}
                        <th class="column-title">Действия</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for offer in offers %}
                        <tr class="even pointer">
                            {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                                <td>{{ offer.id }}</td>
                                <td>{{ offer.owner.email }}</td>
                            {% endif %}
                            <td>{{ offer.title }}</td>
                            {#<td>#}
                                {#<ul class="list-unstyled">#}
                                    {#{% for item in offer.links %}#}
                                        {#<li>{{ item.type }}</li>#}
                                    {#{% endfor %}#}
                                {#</ul>#}
                            {#</td>#}
                            {#<td>#}
                                {#<ul class="list-unstyled">#}
                                    {#{% for item in offer.compensations %}#}
                                        {#<li>{{ item.price }} {{ item.currency }}. {{ item.type }}: {{ item.eventType.title }}</li>#}
                                    {#{% endfor %}#}
                                {#</ul>#}
                            {#</td>#}
                            <td>{{ offer.activeFrom|date('d-m-Y') }}</td>
                            <td>{{ offer.activeTo|date('d-m-Y') }}</td>
                            <td>
                                {% if true == offer.isActive %}
                                    <small class="label bg-green">Активирован</small>
                                {% else %}
                                    <small class="label bg-red">Деактивирован</small>
                                {% endif %}
                            </td>

                            {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                                <td>
                                    {% if true == offer.isDeleted %}
                                        <small class="label bg-red">Да</small>
                                    {% else %}
                                        <small class="label bg-green">Нет</small>
                                    {% endif %}
                                </td>
                            {% endif %}
                            <td>
                                <div class="btn-group">
                                    {% if is_granted('ROLE_APP_OFFER_APPROVE') %}
                                        <a href="{{ path('app_offer_change_approve', { id: offer.id, approve: not offer.isActive}) }}" class="btn btn-sm btn-default">
                                            {% if true == offer.isActive %}Деактивировать{% else %}Активировать{% endif %}
                                        </a>
                                    {% endif %}
                                    {% if is_granted('ROLE_APP_OFFER_CHANGE_ACTIVITY') %}
                                    <a href="{{ path('app_offer_change_activity', { id: offer.id, active: not offer.isActive}) }}" class="btn btn-sm btn-default">
                                        {% if true == offer.isActive %}Деактивировать{% else %}Активировать{% endif %}
                                    </a>
                                    {% endif %}
                                    {% if is_granted('ROLE_APP_OFFER_EDIT') %}
                                    <a href="{{ path('app_offer_edit', { id: offer.id}) }}" class="btn btn-sm btn-default">
                                        <i class="fa fa-pencil"></i>
                                        Редактировать
                                    </a>
                                    {% endif %}
                                    {% if is_granted('ROLE_APP_OFFER_HIDE') %}
                                    <button
                                            type="button"
                                            class="btn btn-sm btn-default"
                                            data-toggle="modal"
                                            data-target="#modal-remove-record"
                                            data-url="{{ path('app_offer_hide', { id: offer.id}) }}"
                                    >
                                        <i class="fa fa-trash-o"></i>
                                        Удалить
                                    </button>
                                    {% endif %}
                                    {% if is_granted('ROLE_APP_OFFER_DELETE') %}
                                    <button
                                            type="button"
                                            class="btn btn-sm btn-default"
                                            data-toggle="modal"
                                            data-target="#modal-remove-record"
                                            data-url="{{ path('app_offer_remove', { id: offer.id}) }}"
                                    >
                                        <i class="fa fa-trash-o"></i>
                                        Удалить из БД
                                    </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                {% include 'pager/default_pager.html.twig' %}
            </div>
        </div>
    </form>

{% endblock %}