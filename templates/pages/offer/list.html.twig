{% extends 'base.html.twig' %}

{% block top_nav_menu_buttons %}
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            {% if is_granted('ROLE_APP_OFFER_CREATE') %}
                <a class="" href="{{ path('app_offer_create') }}">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Добавить
                </a>
            {% endif %}
        </li>
    </ul>
{% endblock %}

{% block page_content %}

    <form action="#" method="GET">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr class="headings">
                        {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                            {% include 'pages/offer/fields/_owner_headers.html.twig' %}
                            {% include 'pages/offer/fields/_admin_headers.html.twig' %}

                        {% elseif is_granted(['ROLE_OWNER']) %}
                            {% include 'pages/offer/fields/_owner_headers.html.twig' %}

                        {% elseif is_granted(['ROLE_SELLER']) %}
                            {% include 'pages/offer/fields/_seller_headers.html.twig' %}
                        {% endif %}
                        <th class="column-title">Действия</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for offer in offers %}
                        <tr class="even pointer">

                            {% if is_granted(['ROLE_ADMIN', 'ROLE_SUPER_ADMIN']) %}
                                {% include 'pages/offer/fields/_owner_content.html.twig' %}
                                {% include 'pages/offer/fields/_admin_content.html.twig' %}

                            {% elseif is_granted(['ROLE_OWNER']) %}
                                {% include 'pages/offer/fields/_owner_content.html.twig' %}

                            {% elseif is_granted(['ROLE_SELLER']) %}
                                {% include 'pages/offer/fields/_seller_content.html.twig' %}
                            {% endif %}
                            <td>
                                <div class="btn-group">
                                    {% include 'pages/offer/buttons/_approve.html.twig' %}
                                    {% include 'pages/offer/buttons/_change_activity.html.twig' %}
                                    {% include 'pages/offer/buttons/_edit.html.twig' %}
                                    {% include 'pages/offer/buttons/_hide.html.twig' %}
                                    {% include 'pages/offer/buttons/_delete.html.twig' %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                {% include 'pager/default_pager.html.twig' %}
            </div>
        </div>
    </form>

{% endblock %}