<table class="table table-striped table-bordered">
    <thead>
    <tr class="headings">
        <th class="column-title">Информация</th>
        {% if is_granted(['ROLE_SELLER']) %}
        <th class="column-title">Действия</th>
        {% endif %}
    </tr>
    </thead>

    <tbody>
    {% for offer in offers %}
        <tr class="even pointer">
            <td width="90%">
                <div class="box box-solid">
                    <div class="box-body">
                        <h4 style="background-color:#f7f7f7;
                        font-size: 18px;
                        text-align: center;
                        padding: 7px 10px;
                        margin-top: 0;"
                        >
                            {{ offer.title }}
                        </h4>
                        <div>
                            <div>
                                <div class="clearfix">
                                    <h5 style="margin-top: 0">Компенсации</h5>
                                    {% for item in offer.compensations %}
                                        <p>{{ item.price ~ item.currency }}. {{ item.type }}: {{ item.description }}</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>

            {% if is_granted(['ROLE_SELLER']) %}
            <td>
                <div class="btn-group">
                    {% include 'pages/offer/buttons/_change_accessibility.html.twig' %}
                </div>
            </td>
            {% endif %}
        </tr>
    {% endfor %}

    </tbody>
</table>