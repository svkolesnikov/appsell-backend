{% extends 'base.html.twig' %}

{% set _navbar_title = 'create' == action ? 'Создание' : 'Редактирование' %}

{% block top_nav_menu_buttons %}
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="{{ path('app_settings_groups_list') }}"><i class="fa fa-list" aria-hidden="true"></i>
                Вернуться к списку
            </a>
        </li>
    </ul>
{% endblock %}

{% import _self as self %}
{% macro widget_app_prototype(widget) %}
    <tr>
        <td>{{ form_widget(widget.store) }}</td>
        <td>{{ form_widget(widget.url, {'required':'true'}) }}</td>
        <td class="actions">
            <div class="btn-group">
                <a href="#" class="btn btn-sm btn-danger remove_app_link">
                    <i class="fa fa-trash-o"></i>
                    Удалить
                </a>
            </div>
        </td>
    </tr>
{% endmacro %}

{% macro widget_action_prototype(widget) %}
    <tr>
        <td>{{ form_widget(widget.code, {'required':'true'}) }}</td>
        <td>{{ form_widget(widget.title, {'required':'false'}) }}</td>
        <td class="actions">
            <div class="btn-group">
                <a href="#" class="btn btn-sm btn-danger remove_action_link">
                    <i class="fa fa-trash-o"></i>
                    Удалить
                </a>
            </div>
        </td>
    </tr>
{% endmacro %}

{% block javascripts %}

    {{ parent() }}

    {% verbatim %}
    <script id="tmpl_new_record_form" type="text/x-jquery-tmpl">{{html form}}</script>
    {% endverbatim %}

    <script id="tmpl_new_action_btn" type="text/x-jquery-tmpl">
        <tr name='new_action_btn_container'>
            <td colspan="3"><a href="#" class="btn btn-primary add_action_link">Добавить</a></td>
        </tr>
    </script>

    <script id="tmpl_new_app_btn" type="text/x-jquery-tmpl">
        <tr name='new_app_btn_container'>
            <td colspan="3"><a href="#" class="btn btn-primary add_app_link">Добавить</a></td>
        </tr>
    </script>

    <script id="tmpl_remove_app_btn" type="text/x-jquery-tmpl">
        <div class="btn-group">
            <a href="#" class="btn btn-sm btn-danger remove_app_link">
                <i class="fa fa-trash-o"></i>
            Удалить
            </a>
        </div>
    </script>

    <script id="tmpl_remove_action_btn" type="text/x-jquery-tmpl">
        <div class="btn-group">
            <a href="#" class="btn btn-sm btn-danger remove_action_link">
                <i class="fa fa-trash-o"></i>
            Удалить
            </a>
        </div>
    </script>

    <script type="text/javascript">
        $(function() {

            var appCollectionHolder = $('table.apps');
            var actionCollectionHolder = $('table.actions');

            $('#tmpl_new_app_btn').tmpl().appendTo(appCollectionHolder);
            $('#tmpl_new_action_btn').tmpl().appendTo(actionCollectionHolder);

            $('.add_app_link').on('click', function(e) {
                e.preventDefault();
                addForm(appCollectionHolder, $('[name=new_app_btn_container]'));
            });

            $('.add_action_link').on('click', function(e) {
                e.preventDefault();
                addForm(actionCollectionHolder, $('[name=new_action_btn_container]'));
            });

            $(document).on('click', '.remove_app_link.remove_action_link', function(e) {
                e.preventDefault();
                this.closest('tr').remove();
            });

            appCollectionHolder.data('index', appCollectionHolder.find(':input').length);
            actionCollectionHolder.data('index', actionCollectionHolder.find(':input').length);

            function addForm(collectionHolder, newContainer) {

                var prototype = collectionHolder.data('prototype');
                var index = collectionHolder.data('index');

                var newForm = prototype;
                // You need this only if you didn't set 'label' => false in your apps field in TaskType
                // Replace '__name__label__' in the prototype's HTML to
                // instead be a number based on how many items we have
                // newForm = newForm.replace(/__name__label__/g, index);

                // Replace '__name__' in the prototype's HTML to
                // instead be a number based on how many items we have
                newForm = newForm.replace(/__name__/g, index);

                appCollectionHolder.data('index', index + 1);

                var newFormTr = $('#tmpl_new_record_form').tmpl({ form: newForm });
                newContainer.before(newFormTr);
            }
        });
    </script>

{% endblock %}

{% block page_content %}

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Общая информация</h3>
                    </div>
                    <div class="box-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.description) }}

                        <div class="form-group">
                            <label class="form-control-label">Период действия</label>
                            <div class="row">
                                <div class="col-sm-2" style="float:left; width:180px">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        {{ form_widget(form.active_from) }}
                                    </div>
                                </div>

                                <div class="col-sm-2" style="float:left; width:180px">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        {{ form_widget(form.active_to) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-control-label">Стоимость</label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div style="float:left; width:118px">
                                        {{ form_widget(form.price) }}
                                    </div>
                                    <div style="float:left;">
                                        {{ form_widget(form.currency) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Приложения</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-bordered apps" data-prototype="{{ self.widget_app_prototype(form.apps.vars.prototype)|e }}">
                            <tr>
                                <td width="200px">Платформа</td>
                                <td>Url</td>
                                <td>Действия</td>
                            </tr>
                            {% for app in form.apps %}
                                {{ self.widget_app_prototype(app) }}
                            {% endfor %}
                        </table>
                    </div>
                </div>
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Шаги выполнения</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-bordered actions" data-prototype="{{ self.widget_action_prototype(form.actions.vars.prototype)|e }}">
                            <tr>
                                <td width="200px">Код</td>
                                <td>Наименование</td>
                                <td>Действия</td>
                            </tr>
                            {% for action in form.actions %}
                                {{ self.widget_action_prototype(action) }}
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="well well-small form-actions">
            <button type="submit" class="btn btn-success">
                {% if 'create' == action %}Создать{% else %}Обновить{% endif %}
            </button>
        </div>
    {{ form_end(form) }}

{% endblock %}