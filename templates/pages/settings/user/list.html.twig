{% extends 'base.html.twig' %}

{% block top_nav_menu_buttons %}
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a class="" href="{{ path('app_settings_users_create') }}">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                Добавить новый
            </a>
        </li>
    </ul>
{% endblock %}

{% block page_content %}

    <form action="#" method="GET">
        <div class="box box-primary">
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr class="headings">
                        <th class="column-title">Email</th>
                        <th class="column-title">Имя</th>
                        <th class="column-title">Фамилия</th>
                        <th class="column-title">Телефон</th>
                        <th class="column-title">Действия</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                    <tr class="even pointer">
                        <td>{{ user.email }}</td>
                        <td>{{ user.profile.firstname }}</td>
                        <td>{{ user.profile.lastname }}</td>
                        <td>{{ user.profile.phone }}</td>
                        <td>
                            <div class="btn-group">
                                {% if is_granted('ROLE_APP_USER_EDIT') %}
                                <a href="{{ path('app_settings_users_edit', { id: user.id}) }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-pencil"></i>
                                    Редактировать
                                </a>
                                {% endif %}
                                {% if is_granted('ROLE_APP_USER_DELETE') %}
                                <a href="{{ path('app_settings_users_remove', { id: user.id}) }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-trash-o"></i>
                                    Удалить
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                {% include 'pager/default_pager.html.twig' %}
            </div>
        </div>
    </form>

{% endblock %}